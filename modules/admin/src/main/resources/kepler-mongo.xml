<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util" xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="kepler.mongo" class="com.kepler.admin.mongo.impl.MongoClientFactory">
		<property name="host" value="#{T(com.kepler.config.PropertiesUtils).get('com.mongodb.mongoclient.host')}" />
		<property name="username" value="#{T(com.kepler.config.PropertiesUtils).get('com.mongodb.mongoclient.username')}" />
		<property name="password" value="#{T(com.kepler.config.PropertiesUtils).get('com.mongodb.mongoclient.password')}" />
		<property name="db" value="kepler" />
	</bean>
	
	<bean id="kepler.mongo.tracer" class="com.kepler.admin.mongo.impl.MongoClientFactory">
		<property name="host" value="#{T(com.kepler.config.PropertiesUtils).get('com.mongodb.mongoclient.host')}" />
		<property name="username" value="#{T(com.kepler.config.PropertiesUtils).get('com.mongodb.mongoclient.username')}" />
		<property name="password" value="#{T(com.kepler.config.PropertiesUtils).get('com.mongodb.mongoclient.password')}" />
		<property name="db" value="tracers" />
	</bean>
	
	<bean id="kepler.mongo.config.status" class="com.kepler.admin.mongo.impl.MongoProxyConfig">
		<constructor-arg value="status" />
		<constructor-arg ref="kepler.mongo" />
	</bean>

	<bean id="kepler.mongo.config.transfer.day" class="com.kepler.admin.mongo.impl.MongoProxyConfig">
		<constructor-arg value="transfer.day" />
		<constructor-arg ref="kepler.mongo" />
	</bean>

	<bean id="kepler.mongo.config.transfer.hour" class="com.kepler.admin.mongo.impl.MongoProxyConfig">
		<constructor-arg value="transfer.hour" />
		<constructor-arg ref="kepler.mongo" />
	</bean>

	<bean id="kepler.mongo.config.transfer.minute" class="com.kepler.admin.mongo.impl.MongoProxyConfig">
		<constructor-arg value="transfer.minute" />
		<constructor-arg ref="kepler.mongo" />
	</bean>

	<bean id="kepler.mongo.config.transfer.dashboard" class="com.kepler.admin.mongo.impl.MongoProxyConfig">
		<constructor-arg value="transfer.dashboard" />
		<constructor-arg ref="kepler.mongo" />
	</bean>
	
	<bean id="kepler.mongo.trace" class="com.kepler.admin.mongo.impl.MongoProxyConfig">
		<constructor-arg value="trace" />
		<constructor-arg ref="kepler.mongo.tracer" />
	</bean>

</beans>